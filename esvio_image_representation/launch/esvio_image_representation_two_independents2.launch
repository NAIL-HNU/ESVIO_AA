<launch>
  <rosparam param="/use_sim_time">true</rosparam>

  <node name="esvio_image_representation1" pkg="esvio_image_representation" type="esvio_image_representation" output="screen">
    <remap from="events" to="/davis/left/events" />
    <remap from="imu" to="/davis/left/imu" />
    <remap from="image" to="/davis/left/image_raw" />
    <remap from="camera_info" to="/davis/left/camera_info" />
    <remap from="image_representation" to="image_representation_left" />

    <rosparam command="load" file="$(find esvio_image_representation)/cfg/esvio_image_representation.yaml" />
  </node>

  <node name="esvio_image_representation2" pkg="esvio_image_representation" type="esvio_image_representation" output="screen">
    <remap from="events" to="/davis/left/events" />
    <remap from="imu" to="/davis/left/imu" />
    <remap from="image" to="/davis/left/image_raw" />
    <remap from="camera_info" to="/davis/left/camera_info" />
    <remap from="image_representation" to="image_representation_right" />

    <rosparam command="load" file="$(find esvio_image_representation)/cfg/esvio_image_representation2.yaml" />
  </node>

  <node name="global_timer" pkg="rostopic" type="rostopic" args="pub -s -r 30 /sync std_msgs/Time 'now' ">
    <rosparam param="/use_sim_time">true</rosparam>
  </node>

  <!-- 	<node name="sync" pkg="topic_tools" type="transform" args="/davis/left/image_raw /sync std_msgs/Time 'm.header.stamp'" /> -->
  <!--   <node name="test_imu" pkg="topic_tools" type="transform" args="/davis/left/imu /test_imu std_msgs/Time 'm.header.stamp'" /> -->

  <!-- rqt_gui -->
  <node pkg="rqt_gui" type="rqt_gui" name="rqt_gui" args="--perspective-file $(find esvio_image_representation)/esvio_image_representation.perspective" />

  <node pkg="rosbag" type="play" name="play" output="screen"
    args="/home/zhouyi/workspace/dataset/DVS/rpg_ijrr/shapes_translation.bag -r 1 -u 2 --clock">
    <remap from="/dvs/events" to="/davis/left/events" />
    <remap from="/dvs/image_raw" to="/davis/left/image_raw" />
    <remap from="/dvs/camera_info" to="/davis/left/camera_info" />
  </node>

</launch>